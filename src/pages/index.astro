---
import '../styles/global.css';
import ExecCard from '../components/ExecCard.astro';
import ImageCarousel from '../components/ImageCarousel.astro';
import execsData from '../data/execs.json';

const carouselImages = [
  { src: '/images/carousel/unnamed-2.jpg', alt: 'Brooklyn Tech Sunrise in Action' },
  { src: '/images/carousel/unnamed-3.jpg', alt: 'Environmental Justice Organizing' },
  { src: '/images/carousel/unnamed-4.jpg', alt: 'Sunrise Movement Brooklyn Tech' },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Brooklyn Tech Environmental Justice X Sunrise club - Youth-led climate action and environmental justice organizing in Brooklyn." />
    <title>Brooklyn Tech Environmental Justice X Sunrise</title>
  </head>
  <body class="bg-[#fdf5e1]">
    <!-- Header -->
    <header class="bg-[#ffd800] text-[#061a0b] shadow-lg">
      <div class="container mx-auto px-4 py-8 md:py-12">
        <div class="text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">
            Brooklyn Tech Environmental Justice
          </h1>
          <p class="text-xl md:text-2xl font-light mb-2">X Sunrise Movement</p>
          <p class="text-lg md:text-xl opacity-90 max-w-3xl mx-auto">
            Student-led climate action fighting for environmental justice in our communities
          </p>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main class="container mx-auto px-4 py-12">
      <!-- About Section -->
      <section class="mb-16">
        <div class="max-w-4xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">Our Mission</h2>
          <p class="text-lg text-gray-700 leading-relaxed mb-4">
            We are Brooklyn Tech students committed to fighting climate change and environmental racism.
            Through organizing, education, and direct action, we work to build a sustainable and just future
            for all communities.
          </p>
          <p class="text-lg text-gray-700 leading-relaxed">
            In partnership with the Sunrise Movement, we mobilize young people to demand bold action on climate
            change and create millions of good jobs in the process.
          </p>
        </div>
      </section>

      <!-- Upcoming Meetings Section -->
      <section class="mb-16">
        <div class="max-w-4xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
            Upcoming Meetings
          </h2>
          <div class="bg-white rounded-xl shadow-lg p-8 border-l-4 border-[#ffd800]">
            <div class="mb-6">
              <div class="flex items-center gap-3 mb-2">
                <svg class="w-6 h-6 text-[#ffd800]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <h3 class="text-2xl font-bold text-[#061a0b]">Next Wednesday</h3>
              </div>
              <p class="text-lg text-[#e13f01] font-semibold mb-2">Interest Meeting</p>
              <p class="text-gray-700">Come learn about the Sunrise Movement and how you can get involved in the fight for climate justice!</p>
            </div>
            <div class="border-t border-gray-200 pt-6">
              <div class="flex items-center gap-3 mb-2">
                <svg class="w-6 h-6 text-[#ffd800]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h3 class="text-xl font-bold text-[#061a0b]">Regular Meetings</h3>
              </div>
              <p class="text-lg text-[#061a0b]">Every Wednesday</p>
              <p class="text-gray-700 mt-1">Join us weekly as we organize, plan actions, and build our movement for environmental justice.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- Image Carousel Section -->
      <section class="mb-16">
        <div class="max-w-6xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8 text-center">
            Our Actions
          </h2>
          <ImageCarousel images={carouselImages} />
        </div>
      </section>

      <!-- Executive Board Section -->
      <section class="mb-16">
        <div class="max-w-7xl mx-auto">
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 text-center">
            Meet the Executive Board
          </h2>
          <p class="text-lg text-gray-600 mb-12 text-center max-w-3xl mx-auto">
            Our dedicated team of student leaders working to create change at Brooklyn Tech and beyond
          </p>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {execsData.map((exec) => (
              <ExecCard
                name={exec.name}
                role={exec.role}
                bio={exec.bio}
                image={exec.image}
              />
            ))}
          </div>
        </div>
      </section>

      <!-- Call to Action Section -->
      <section class="mb-16">
        <div class="bg-[#ffd800] rounded-2xl shadow-xl p-8 md:p-12 text-center">
          <h2 class="text-3xl md:text-4xl font-bold mb-4 text-[#061a0b]">Get Involved</h2>
          <p class="text-xl mb-8 max-w-2xl mx-auto text-[#061a0b]">
            Join us in the fight for climate justice. Every voice matters, and together we can create real change.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="https://www.instagram.com/sunrise_brooklyntech/"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-[#061a0b] text-white px-8 py-3 rounded-lg font-semibold hover:bg-black transition-colors duration-200 inline-block"
            >
              Follow Us on Instagram
            </a>
            <a
              href="https://www.sunrisemovement.org/"
              target="_blank"
              rel="noopener noreferrer"
              class="bg-white text-[#061a0b] px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors duration-200 inline-block border-2 border-[#061a0b]"
            >
              Learn About Sunrise
            </a>
          </div>
        </div>
      </section>
    </main>

    <!-- Footer -->
    <footer class="bg-[#061a0b] text-white py-8">
      <div class="container mx-auto px-4">
        <div class="text-center">
          <p class="text-gray-300 mb-2">
            Brooklyn Tech Environmental Justice X Sunrise Movement
          </p>
          <p class="text-gray-400 text-sm">
            Building a future where everyone has access to clean air, water, and a livable planet
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
 
